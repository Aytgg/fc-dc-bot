<%- include('blocks/header', {bot, user, path}) %>
<style>
  .bot-name {
    animation: rainbow 3s infinite;
  }
  .rainbow {
    -webkit-animation: rainbow 3s infinite;
    -ms-animation: rainbow 3s infinite;
    animation: rainbow 3s infinite;
  }
  @-webkit-keyframes rainbow {
    0%{color: orange;}<br>
    20%{color: #CCEEFF;}
    40%{color: red;}
    60%{color: yellow;}
    80%{color: green;}
    100%{color: blue;}
    100%{color: orange;}
  }
  @-ms-keyframes rainbow {
    0%{color: orange;}<br>
    20%{color: #CCEEFF;}
    40%{color: red;}
    60%{color: yellow;}
    80%{color: green;}
    100%{color: blue;}
    100%{color: orange;}
  }
  @keyframes rainbow {
    0%{color: orange;}<br>
    20%{color: #CCEEFF;}
    40%{color: red;}
    60%{color: yellow;}
    80%{color: green;}
    100%{color: blue;}
    100%{color: orange;}
  }
</style>
<div class="container">
	<div class="jumbotron">
		<div align="center">
		<a class="navbar-brand">
      <div class="column" id="bot-img">
        <div class="bot-img">
          <img src="<%= bot.user.displayAvatarURL({ format: 'png' }) %>" width="200" height="200" class="d-inline-block align-top rounded-circle">
        </div>
      </div>
      <br />
      <font color="white" size=20 class="bot-name"> <%= bot.user.username %></font></a><br /><br />
			<% if(!user) { %>
				<a class="btn btn-primary" href="/login" role="button"><i class="fa fa-key fa-fw"></i> Giriş Yap</a><br><br>
				<a class="btn btn-primary" href="/commands" role="button"><i class="fa fa-book fa-fw"></i> Komutlar</a><br><br>
			<% } else { %>
				<a class="btn btn-primary" href="/sunucular" role="button"><i class="fa fa-cogs fa-fw" aria-hidden="true"></i> Yönetim Paneli</a><br><br>
				<% if((user.id == process.env.OWNER_ID_AYSU) || (user.id == process.env.OWNER_ID_AYTUG)) { %>
						<a class="btn btn-primary" href="/admin" role="button"><i class="fa fa-key fa-fw" aria-hidden="true"></i> Admin Paneli</a><br><br>
				<% } %>
				<a class="btn btn-primary" href="/commands" role="button"><i class="fa fa-book fa-fw"></i> Komutlar</a><br><br>
				<a class="btn btn-primary" href="/logout" role="button"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Çıkış Yap</a><br><br>
			<% } %>
		</div>
	</div>
</div>
<% include ./blocks/footer %>