<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="card" style="width: 20rem">
	<% if (guild.icon) { %>
		<img class="d-inline-block align-top rounded-circle" style="width: 100%;" src="<%= `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=256` %>" alt="">
	<% } else { %>
		<canvas style="background-color: #7289da" class="d-inline-block align-top rounded-circle" id="<%= guild.name.split(' ').join('').replace(`'`, ``) %>" width="256px" height="320px"></canvas>
		<script>
			function draw() {
				const ctx = document.getElementById("<%= guild.name.split(' ').join('').replace(`'`, ``) %>").getContext('2d');
				ctx.font = '95px Arial';
				ctx.textAlign = "center";
				ctx.fillStyle = "white";
				ctx.fillText("<%= guild.name.split(' ').map(v => v[0]).join('') %>", 125, 185);
			};
			draw();
		</script>
	<% } %>
	<div class="card-block">
		<h4 class="card-title" style="color: #ffff;"><br><center><%= guild.name %></h4></center><br>
		<ul class="list-group list-group-flush" style="width: 100%; border: 0px;">
			<li class="list-group-item" style="width: 100%; color: #ffffff; border: 0px;">
				<i class="fa fa-fw fa-user-circle-o" aria-hidden="true"></i>
        <strong>Sunucu Sahibi</strong>: 
        <a <%= guild.ownerID %> style='color: #ffffff'><%= bot.users.cache.get(guild.ownerID).then(u => u.tag) %></a>
			</li>
			<li class="list-group-item">
				<i class="fa fa-fw fa-users" aria-hidden="true"></i>
        <strong>Kullanıcı Sayısı</strong>:
				<%= guild.members.size %>
				( <i class="fa fa-fw fa-android" aria-hidden="true"></i>
				<%= guild.members.cache.filter(m => m.user.bot).size %> Bot )
			</li>
			<li class="list-group-item">
				<i class="fa fa-fw fa-users" aria-hidden="true"></i>
				<strong>Rol Sayısı</strong>:
        <%= guild.roles.cache.size %>
			</li>
			<li class="list-group-item">
				<strong>Kanal Sayısı</strong>:
				<i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>
				<%= guild.channels.cache.filter(c => c.type == 'text').size %>
        <i class="fa fa-fw fa-microphone" aria-hidden="true"></i>
        <%= guild.channels.cache.filter(c => c.type == 'voice').size %>
			</li>
      <li class="list-group-item">
        <i class="fa fa-fw fa-calendar" aria-hidden="true"></i>
        <strong>Oluşturulma Tarihi</strong>:
        <%= moment(guild.createdAt).locale('tr').tz('Europe/Istanbul').format("LL") %>
      </li>
		</ul>
		<div align="right"><a class="btn btn-danger" data-toggle="modal" data-target="#serverLeaveModal" role="button"><font color="white">Botu Sunucudan At <i class="fa fa-fw fa-sign-out" aria-hidden="true"></i></font>
		</a></div>
	</div>
</div>